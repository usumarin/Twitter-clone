<header>
  <div class="container-fluid px-0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to "TwitterClone", root_path, class: "navbar-brand" %>
      <div class="navbar-nav">
          <%= link_to "Home",root_path, class: "nav-item nav-link" %>
          <%= link_to "つぶやく", new_path, class: "nav-item nav-link" %>
          <%= link_to "つぶやきをみる", tweets_path, class: "nav-item nav-link" %>
          <% if user_signed_in? %>
            <%= link_to 'プロフィール変更', edit_user_registration_path, class: "nav-item nav-link" %>
