<div class="row">
  <div class="col-2">
    <div class="card sticky-top mt-5" style="width: 20rem;">
      <div class="card-title"><h3 class="ml-4"><%= link_to current_user.name, user_path(current_user) %> @<%= current_user.id %></h3>
        <div class="card-body">
          <div class="user-activity">
            <div class="row">
              <div class="col-xs-4 tweets-num text-center mx-3">
                <div class="text">
                  つぶやき
                </div>
                <div class="num">
                  <%= link_to current_user.tweets.count, user_path(current_user) %>
                </div>
              </div>
              <div class="col-xs-4 follow-num text-center mx-3">
                <div class="text">
                  follow
                </div>
                <div class="num">
                  <%= current_user.followings.count %>
                </div>
              </div>
              <div class="col-xs-4 follower-num text-center mx-3">
                <div class="text">
                  follower
                </div>
                <div class="num">
                  <%= current_user.followers.count %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% @tweet.errors.full_messages.each do |message| %>
      <div class="alert-danger">
        <%= message %>
      </div>
      <% end %>
      <%= form_with(model: @tweet,class: "tweet-form",local: true) do |form| %>
      <div class="form-group">
        <label for="tweetInput">投稿するTweetの内容</label>
        <%= form.text_area :content , class: 'form-control', type: 'text'%>
        <%= form.submit 'Tweetを投稿する', class: 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>